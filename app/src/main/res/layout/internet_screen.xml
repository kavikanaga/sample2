<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#ba000000"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:textColor="#fff"
    android:textSize="20dp"
    android:fontFamily="sans-serif"
    android:text="No Internet Connection"
    android:id="@+id/noInternet"/>
    <TextView
        android:layout_margin="15dp"
        android:layout_below="@+id/noInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:text=" Please connect to network"
        android:id="@+id/noInterneterror"/>



    <TextView
        android:id="@+id/internetsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noInterneterror"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:text="SETTINGS"
        android:textColor="#ef9608"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>