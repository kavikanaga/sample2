<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <SearchView
                android:id="@+id/search_view"
                android:layout_width="300dp"
                app:theme="@style/SearchViewStyle"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:layout_marginStart="-16dp"
                android:textColor="#000000"

                android:queryHint="Search...." />
            <TextView
                android:id="@+id/tv_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/search_view"
                android:text="Count : "
                android:textSize="50px"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_co"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#000000"

                android:textSize="50px"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="2dp">

<!--            <TextView-->
<!--                android:layout_width="0dip"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="@string/tvTagUii"-->
<!--                android:textSize="15sp"-->
<!--                android:visibility="gone" />-->

            <TextView
                android:id="@+id/tv_count1"
                android:layout_width="0dp"
                android:textColor="#000000"

                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="2"
                android:text="Product ID"
                android:textSize="55px"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Product"
                android:textColor="#000000"

                android:textSize="55px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Qty"
                android:textColor="#000000"

                android:textStyle="bold"
                android:textSize="55px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/LvTags"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

<!--            <Button-->
<!--                android:id="@+id/btInventoryPerMinute"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text=""-->
<!--                android:visibility="gone"/>-->

<!--            <Button-->
<!--                android:id="@+id/btInventory"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="@string/rbInventorySingle" />-->

            <Button
                android:id="@+id/InventoryLoop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50px"
                android:textColor="@color/white"
                android:background="#2E7D32"
                android:text="Start" />

            <Button
                android:id="@+id/btStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#c62828"
                android:textSize="50px"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:text="@string/title_stop" />

<!--            <Button-->
<!--                android:id="@+id/btClear"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="@string/btClear" />-->
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
